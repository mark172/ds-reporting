<div class="jumbotron">
	<h1>LNE DSS Reporting</h1>
	<%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
	<%= link_to 'CSV file', projects_path(format: :csv), class: "btn btn-success" %>
</div>

<div class="row">
	<div class="col-md-12">

	<h3>Weekly on call schedule</h3>
	<div><%= image_tag "onCall0327.png", class: "img-responsive" %></div><br>
	<button type="button" class="btn btn-info" data-toggle="collapse" data-target="#calendar">Show / Hide Full Calendar</button>
		<div id="calendar" class="collapse">
			<div class="embed-responsive embed-responsive-16by9">
				<iframe src="https://www.google.com/calendar/embed?showTitle=0&amp;showPrint=0&amp;showCalendars=0&amp;showTz=0&amp;mode=WEEK&amp;height=200&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=lnedigitalsignage%40gmail.com&amp;color=%231B887A&amp;ctz=America%2FLos_Angeles" style=" border-width:0 " width="800" height="200" frameborder="0" scrolling="no"></iframe>
			</div>
		</div>
	</div>
</div>
<hr>

<h3>Projects</h3>
<% @projects.each do |project| %>
<div class="well">
	<div class="row">
		<div class="col-md-3">
			<div class="panel panel-info">
			  <div class="panel-heading">
			    <h3 class="panel-title">Engineer</h3>
			  </div>
			  <div class="panel-body">
			    <%= project.text_for_engineer %>
			  </div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="panel panel-info">
			  <div class="panel-heading">
			    <h3 class="panel-title">Project</h3>
			  </div>
			  <div class="panel-body">
			    <%= project.project %>
			  </div>
			</div>
		</div>	
		<div class="col-md-3">
			<div class="panel panel-info">
			  <div class="panel-heading">
			    <h3 class="panel-title">Status</h3>
			  </div>
			  <div class="panel-body">
			    <%= project.text_for_status %>
			  </div>
			</div>
		</div>

		<div class="col-md-3">
			<div class="panel panel-info">
			  <div class="panel-heading">
			    <h3 class="panel-title">Percent Complete</h3>
			  </div>
			  <div class="panel-body">
			    <%= project.text_for_percentage %>%
			  </div>
			</div>
		</div>
		</div>

		<div class="row">
		<div class="col-md-6">
			<div class="panel panel-success">
			  <div class="panel-heading">
			    <h3 class="panel-title">This Week's Project</h3>
			  </div>
			  <div class="panel-body">
			    <%= project.thisweek %>
			  </div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="panel panel-success">
			  <div class="panel-heading">
			    <h3 class="panel-title">Next Week's Project</h3>
			  </div>
			  <div class="panel-body">
			    <%= project.nextweek %>
			  </div>
			</div>
		</div>
	</div>
</div>
<h5>Created on <%= project.created_at.strftime("%b %d, %Y") %>.  Updated on <%= project.updated_at.strftime("%b %d, %Y") %></h5>
<hr>

<% end %>